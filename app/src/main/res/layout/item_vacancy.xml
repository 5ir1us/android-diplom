<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/dimens_16"
    android:layout_marginVertical="@dimen/dimens_8"
    android:backgroundTint="?android:windowBackground">

    <ImageView
        android:id="@+id/item_vacancy_company_image"
        style="@style/company_image"
        tools:src="@drawable/placeholder"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_vacancy_name"
            style="@style/TextMedium22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Разработчик, который исправит загрузку урока в приложении Практикума" />

        <TextView
            android:id="@+id/item_vacancy_company_name"
            style="@style/TextRegular16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Яндекс.Практикум" />

        <TextView
            android:id="@+id/item_vacancy_salary"
            style="@style/TextRegular16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="до 100 000 рублей за таск" />
    </LinearLayout>
</FrameLayout>
