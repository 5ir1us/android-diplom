<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--    bottom_navigation_view-->
    <style name="NavigationViewStyle">
        <item name="android:background">@color/background</item>
        <item name="itemIconTint">@drawable/bottomnav_main_menu_color</item>
        <item name="itemTextColor">@drawable/bottomnav_main_menu_color</item>
        <item name="itemTextAppearanceActive">@style/navigation_text</item>
        <item name="itemTextAppearanceInactive">@style/navigation_text</item>
        <item name="itemPaddingTop">@dimen/dimens_8</item>
        <item name="itemPaddingBottom">@dimen/dimens_8</item>
    </style>

    <style name="navigation_text" parent="NavigationViewStyle">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/text_size_12</item>
    </style>

    <style name="CountPopupTextViewRegular16NoPadding" parent="TextViewRegular16NoPadding">
        <item name="android:layout_marginTop">@dimen/dimens_4</item>
        <item name="android:background">@drawable/rounded_rect_12dp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingHorizontal">@dimen/dimens_12</item>
        <item name="android:paddingVertical">@dimen/dimens_4</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextViewRegular16NoPadding">
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>
</resources>
