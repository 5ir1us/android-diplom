<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!--    bottom_navigation_view-->
    <style name="NavigationViewStyle">
        <item name="itemIconTint">@drawable/bottomnav_main_menu_color</item>
        <item name="itemTextColor">@drawable/bottomnav_main_menu_color</item>
        <item name="itemTextAppearanceActive">@style/navigation_text</item>
        <item name="itemTextAppearanceInactive">@style/navigation_text</item>
        <item name="itemPaddingTop">@dimen/dimens_8</item>
        <item name="itemPaddingBottom">@dimen/dimens_8</item>
        <item name="itemActiveIndicatorStyle">@null</item>
    </style>

    <style name="navigation_text" parent="NavigationViewStyle">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/text_size_12</item>
    </style>

    <!--    кнопка назад -->
    <style name="ImageViewBackStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/ic_arrow_back</item>
        <item name="android:padding">12dp</item>
        <item name="tint">?attr/textFillColor</item>
    </style>

    <!--    кнопка лайк -->
    <style name="ImageHeart">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/ic_heart</item>
        <item name="android:padding">12dp</item>
        <item name="tint">?attr/textFillColor</item>
    </style>

    <!--    кнопка поделиться  -->
    <style name="ImageShare">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/ic_share</item>
        <item name="android:padding">12dp</item>
        <item name="tint">?attr/textFillColor</item>
    </style>

    <!--    кнопка фильтр  -->
    <style name="ImageFilter">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/ic_filter</item>
        <item name="android:paddingHorizontal">@dimen/dimens_12</item>
        <item name="android:paddingVertical">@dimen/dimens_12</item>
    </style>

    <!--    кнопка в фильтрах  -->
    <style name="buttonInFilter">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">59dp</item>
        <item name="android:layout_marginHorizontal">17dp</item>
        <item name="android:backgroundTint">@color/blue</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/text_size_16</item>

    </style>

    <style name="TextMedium22">
    <item name="android:fontFamily">@font/ys_display_medium</item>
    <item name="android:textSize">@dimen/text_size_22</item>
    <item name="android:textColor">?attr/textFillColor</item>
    </style>

    <style name="TextRegular16">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textColor">?attr/textFillColor</item>
    </style>

    <!--    иконка логотипа работодателя -->
    <style name="company_image">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:paddingVertical">0.6dp</item>
        <item name="android:paddingHorizontal">0.6dp</item>
        <item name="android:background">@drawable/background_rounded_cornered_company_image</item>
    </style>

    <style name="Text" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Text.Medium">
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="Text.Medium16">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <!-- Стиль для EditText -->
    <style name="PrefixTextAppearance" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">14sp</item>
    </style>


    <style name="Button" parent="Widget.AppCompat.Button">
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="cornerRadius">@dimen/dimens_12</item>
        <item name="android:paddingHorizontal">@dimen/dimens_8</item>
        <item name="android:paddingVertical">@dimen/dimens_20</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">@drawable/background_search_state</item>
    </style>

    <style name="Button.Transparent">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="Button.Blue">
        <item name="backgroundTint">@color/blue</item>
        <item name="android:textColor">@color/white_universal</item>
    </style>


    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="boxBackgroundColor">@color/amount_color</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="hintTextColor">@color/search_edit_hint_color</item>
        <item name="android:textColorHint">@color/search_edit_hint_color</item>
        <item name="hintAnimationEnabled">false</item>
        <item name="boxCornerRadiusTopStart">@dimen/dimens_12</item>
        <item name="boxCornerRadiusTopEnd">@dimen/dimens_12</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/dimens_12</item>
        <item name="boxCornerRadiusBottomStart">@dimen/dimens_12</item>
        <item name="placeholderTextColor">@color/search_edit_hint_color</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
    </style>

    <style name="TextInputEditText" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="colorControlActivated">@color/blue</item>
        <item name="android:textColorHighlight">@color/search_edit_hint_color</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:inputType">number</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="hintEnabled">false</item>
    </style>

    <style name="TextInputEditText.FilterInput">
        <item name="boxBackgroundColor">@android:color/transparent</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:inputType">textFilter</item>
    </style>

    <style name="TextInputLayout.FilterItem">
        <item name="boxBackgroundColor">@color/day_night</item>
    </style>


</resources>
